<style>
    .customsearch {
        height: 30px;
        max-width: 500px;
        width: 300px;
        background: #f4f4f4;
        border-radius: 7px;
    }
</style>
<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/Homepage.css" />
<div class="row">
    <div class="col-sm-2">
        <a href="~/Home/Index">
            <img src="~/Images/logo.jpg" alt="img logo" width="200px" height="100px" style="border-radius:100%;" />
        </a>
    </div>
    <div class="col-sm-4" style="display: flex; justify-content: center; align-items: center;">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            @Html.TextBox("SearchString", "", new { @class = "customsearch" });
            <input type="submit" class="customsearch" value="Search" name="Search" style="width:100px;" />
        }
    </div>
    <div class="col-sm-6">
        <ul class="horizontal_navbar" style="justify-content:center;align-items:center;height:100px;">
            <li class="WrapperEachCate">
                <a class="nav-link" href="~/Home/About">GIỚI THIỆU</a>
            </li>
            <li class="WrapperEachCate">
                <div class="nav-link" href="#" style="display:flex;justify-content:center;align-items:center;">
                    <a class="nav-link" href="~/Home/Contact" style="margin-left:10px">
                        <i class="fa-regular fa-address-book" style="margin-right: 8px;"></i>
                        LIÊN HỆ
                    </a>
                </div>
            </li>
            <li class="WrapperEachCate">
                @Html.Action("GioHangPartial", "ShoppingCart")
            </li>
            <li class="WrapperEachCate">
                @if (Session["TaiKhoan"] == null)
                {
                    <div style="margin-left:10px;">
                        <span onclick="Login()">
                            Đăng nhập
                        </span>
                    </div>
                }
                else
                {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark pro-pic"
                       href="#"
                       id="navbarDropdown"
                       role="button"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">
                        <i class="fa-solid fa-user"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end user-dd animated"
                        aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="javascript:void(0)"><i class="mdi mdi-account me-1 ms-1"></i>Xin chào @Session["TenKH"]</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="@Url.Action("MyOrders","Home")">
                            <i class="mdi mdi-settings me-1 ms-1"></i> Đơn hàng của tôi
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="@Url.Action("Logout","Home")"><i class="fa fa-power-off me-1 ms-1"></i>Đăng xuất</a>
                    </ul>
                </li>
            }
                </li>
            </ul>
        </div>
    </div>

