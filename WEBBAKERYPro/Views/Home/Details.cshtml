@using WEBBAKERYPro.Models;
@model SANPHAM
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
<style>
    .prod-seperator {
        width: 100%;
        background: url(https://media.bakingo.com/bakingo-ssr/static/media/dasehdLine.18422b3e.svg);
        height: 1px;
        margin-top: 10px;
    }

    .input-icon i {
        position: absolute;
        padding: 10px;
        margin-top: 8px;
        margin-left: 15px;
    }

    .input-icon h4 {
        margin: 15px;
    }

    .wrapperbutton {
        margin: 30px 10px 10px 10px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .wrapperbutton button {
            border-radius: 5px;
            width: 250px;
            height: 50px;
            margin-left: 10px;
            border: 1px solid #ff5f5d;
        }

            .wrapperbutton button:hover {
                transform: scale(1.05);
                transition: ease 0.5s;
            }

    .inputform {
        max-width: 700px;
        width: 520px;
        border-radius: 10px;
        height: 50px;
        padding-left: 30px;
        margin-left: 15px;
    }

    .wrapperprice {
        font-weight: bold;
        font-size: 25px;
        margin: 10px;
    }

    #wrapperdescribe {
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    #button {
        border-radius: 3px;
        background: white;
    }

    .smallimg {
        margin-bottom: 10px;
    }

        .smallimg img {
            border-radius: 5px;
        }
</style>
<script>
    function showhidden() {
        var mota = document.getElementById("wrapperdescribe");
        var button = document.getElementById("button");
        mota.style.display = "block";
        button.style.display = "none";
    }
</script>
@{
    string img = System.IO.Path.GetFileNameWithoutExtension(Model.HinhSP);
    List<SelectListItem> checkboxes = ViewBag.listAccessory;
    int i = 0;
}
<h1 style="margin:20px;">Thông tin chi tiết sản phẩm</h1>
<div class="container">
    <div class="row">
        <div class="col-1">
            <div class="smallimg">
                <img src="~/Images/imgdetails/@img-a.jpg" alt="Alternate Text" width="100px" height="100px" />
            </div>
            <div class="smallimg">
                <img src="~/Images/imgdetails/@img-b.jpg" alt="Alternate Text" width="100px" height="100px" />
            </div>
            <div class="smallimg">
                <img src="~/Images/imgdetails/@img-c.jpg" alt="Alternate Text" width="100px" height="100px" />
            </div>
            <div class="smallimg">
                <img src="~/Images/imgdetails/@img-d.jpg" alt="Alternate Text" width="100px" height="100px" />
            </div>
        </div>
        <div class="col-6"><img src="~/Images/@Model.HinhSP" alt="Alternate Text" width="490px" height="430px;" /></div>
        <div class=" col-5">
            <h2>
                @Model.TenSP
            </h2>
            <div>
                <p>
                    <span>
                        @Model.RateSP <i class="fa-solid fa-star" style="color: #e2a132;"></i>
                    </span>
                    <span class="ProReview" style="color: #468fce;">(@Model.ReviewSP Reviews)</span>
                </p>
                <div class="prod-seperator"></div>
                <p>
                    <span><i class="fa-solid fa-coins" style="font-size: 25px;"></i></span>
                    <span class="wrapperprice">@Model.Gia vnđ</span>
                </p>
                <div class="input-icon">
                    <h4>Lời nhắn</h4>
                    <i class="fa-regular fa-message"></i>
                    <input type="text" name="name" value="" placeholder="Lời nhắn của bạn" class="inputform" />
                    <h4>Địa chỉ giao hàng</h4>
                    <i class="fa-sharp fa-solid fa-location-dot"></i>
                    <input type="text" name="name" value="" placeholder="Địa chỉ" class="inputform" />
                    <h4>Các phụ kiện đi kèm</h4>
                    @using (Html.BeginForm("ThemSanPhamVaoGio", "ShoppingCart", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => Model.MaSP, new { name = "MASP" })
                <div>
                    @foreach (var item in checkboxes)
                    {
                        <div>
                            @Html.CheckBox("selectedItems["+i+"]", item.Selected)
                            <label for="@item.Value">@item.Text</label>
                        </div>
                        i++;
                    }
                </div>
                        <div class="wrapperbutton">
                            <button style="background: white; color: #ff5f5d;font-weight:bold;" type="submit">Thêm vào giỏ hàng</button>
                            <button style="background: #ff5f5d; color: white; font-weight: bold;">Thanh toán</button>
                        </div>
                    }
                </div>
                <div class="wrapperbutton">
                    @*<a href="@Url.Action("ThemSanPhamVaoGio","ShoppingCart", new {MaSP = Model.MaSP})">
                            <button style="background: white; color: #ff5f5d;font-weight:bold;">Thêm vào giỏ hàng</button>
                        </a>*@
                </div>
                <div class="prod-seperator"></div>
                <h2>Mô tả sản phẩm</h2>
                <div id="wrapperdescribe">@Model.MotaSP</div>
                <button id="button" onclick="showhidden()">READ MORE</button>
            </div>
        </div>
    </div>
</div>